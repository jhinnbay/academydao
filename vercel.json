{
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/spa",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/.well-known/farcaster.json",
      "destination": "/well-known/farcaster.json"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
